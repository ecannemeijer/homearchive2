<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin - HomeArchive{% endblock %}</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-100">
    {% if app.user and is_granted('ROLE_ADMIN') %}
    <nav class="bg-gray-800 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="{{ path('admin_dashboard') }}" class="text-xl font-bold text-white">
                            <i class="fas fa-shield-alt"></i> Admin Panel
                        </a>
                    </div>
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <a href="{{ path('admin_dashboard') }}" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
                        </a>
                        <a href="{{ path('admin_users') }}" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-users mr-2"></i> Gebruikers
                        </a>
                        <a href="{{ path('admin_administrators') }}" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-user-shield mr-2"></i> Administrators
                        </a>
                    </div>
                </div>
                <div class="flex items-center">
                    <span class="text-gray-300 mr-4">{{ app.user.username }}</span>
                    <a href="{{ path('admin_change_password') }}" class="text-gray-300 hover:text-white mr-4">
                        <i class="fas fa-key"></i>
                    </a>
                    <a href="{{ path('admin_logout') }}" class="text-gray-300 hover:text-white">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>
    {% endif %}

    <main class="{% if app.user and is_granted('ROLE_ADMIN') %}py-10{% endif %}">
        <div class="{% if app.user and is_granted('ROLE_ADMIN') %}max-w-7xl mx-auto sm:px-6 lg:px-8{% endif %}">
            {% for message in app.flashes('success') %}
                <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </main>

    {% block javascripts %}{% endblock %}
</body>
</html>
