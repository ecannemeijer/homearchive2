<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    <meta name="description" content="HomeArchive Admin Panel - Beheer gebruikers en systeem">
    <title>{% block title %}Admin - HomeArchive{% endblock %}</title>
    
    <!-- Suppress Tailwind CDN Warning -->
    <script>
        // Suppress Tailwind CDN production warning
        const originalWarn = console.warn;
        console.warn = function(...args) {
            if (typeof args[0] === 'string' && args[0].includes('cdn.tailwindcss.com')) {
                return;
            }
            originalWarn.apply(console, args);
        };
        
        // Suppress Stimulus debug logs
        const originalLog = console.log;
        console.log = function(...args) {
            if (typeof args[0] === 'string' && (
                args[0].includes('application #') || 
                args[0].includes('AssetMapper')
            )) {
                return;
            }
            originalLog.apply(console, args);
        };
    </script>
    
    <!-- Tailwind CSS CDN (Development) -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
          crossorigin="anonymous" referrerpolicy="no-referrer">
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    
    {% block stylesheets %}{% endblock %}
    
    <!-- AssetMapper Import Map - Keep persistent across Turbo navigation -->
    <div id="importmap-scripts" data-turbo-permanent>
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    </div>
</head>
<body class="bg-gray-100 no-scroll-x">
    {# Skip to main content for accessibility #}
    <a href="#admin-main-content" class="skip-link">Skip to main content</a>
    
    {% if app.user and is_granted('ROLE_ADMIN') %}
    {# Admin Navigation - Mobile-First Design with Dark Theme #}
    <nav class="bg-gray-800 shadow-lg sticky top-0 z-50" role="navigation" aria-label="Admin navigation">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                {# Logo and Brand #}
                <div class="flex items-center">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="{{ path('admin_dashboard') }}" 
                           class="text-lg sm:text-xl font-bold text-white hover:text-blue-400 transition-colors flex items-center gap-2"
                           aria-label="Admin Dashboard">
                            <i class="fas fa-shield-alt" aria-hidden="true"></i> 
                            <span class="hidden sm:inline">Admin Panel</span>
                            <span class="sm:hidden">Admin</span>
                        </a>
                    </div>
                    
                    {# Desktop Navigation Links #}
                    <div class="hidden md:ml-8 md:flex md:space-x-1">
                        {% set current_route = app.request.attributes.get('_route') %}
                        
                        <a href="{{ path('admin_dashboard') }}" 
                           class="nav-item {{ current_route == 'admin_dashboard' ? 'active bg-gray-700 text-white' : 'text-gray-300' }} hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-all"
                           aria-current="{{ current_route == 'admin_dashboard' ? 'page' : 'false' }}">
                            <i class="fas fa-tachometer-alt mr-1" aria-hidden="true"></i> Dashboard
                        </a>
                        
                        <a href="{{ path('admin_users') }}" 
                           class="nav-item {{ current_route starts with 'admin_users' ? 'active bg-gray-700 text-white' : 'text-gray-300' }} hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-all"
                           aria-current="{{ current_route starts with 'admin_users' ? 'page' : 'false' }}">
                            <i class="fas fa-users mr-1" aria-hidden="true"></i> Gebruikers
                        </a>
                        
                        <a href="{{ path('admin_administrators') }}" 
                           class="nav-item {{ current_route starts with 'admin_administrators' ? 'active bg-gray-700 text-white' : 'text-gray-300' }} hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-all"
                           aria-current="{{ current_route starts with 'admin_administrators' ? 'page' : 'false' }}">
                            <i class="fas fa-user-shield mr-1" aria-hidden="true"></i> Admins
                        </a>
                    </div>
                </div>
                
                {# User Menu - Desktop Only #}
                <div class="flex items-center gap-3">
                    {# Admin Username - Hidden on small screens #}
                    <span class="hidden sm:block text-gray-300 text-sm font-medium">
                        {{ app.user.username }}
                    </span>
                    
                    {# Change Password - Desktop Only #}
                    <a href="{{ path('admin_change_password') }}" 
                       class="hidden md:flex text-gray-300 hover:text-white items-center px-3 py-2 rounded-md hover:bg-gray-700 transition-all"
                       aria-label="Wachtwoord wijzigen"
                       title="Wachtwoord wijzigen">
                        <i class="fas fa-key" aria-hidden="true"></i>
                    </a>
                    
                    {# Logout - Desktop Only #}
                    <a href="{{ path('admin_logout') }}" 
                       class="hidden md:flex text-gray-300 hover:text-white items-center px-3 py-2 rounded-md hover:bg-gray-700 transition-all"
                       aria-label="Uitloggen"
                       title="Uitloggen">
                        <i class="fas fa-sign-out-alt" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>
    
    {# Mobile Bottom Navigation Bar - Admin Dark Theme #}
    <nav class="md:hidden fixed bottom-0 left-0 right-0 bg-gray-800 border-t border-gray-700 shadow-lg z-50" role="navigation" aria-label="Admin mobile navigation">
        <div class="flex justify-around items-center h-16">
            {% set current_route = app.request.attributes.get('_route') %}
            
            {# Dashboard #}
            <a href="{{ path('admin_dashboard') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full {{ current_route == 'admin_dashboard' ? 'text-blue-400' : 'text-gray-400' }} hover:text-blue-400 transition-colors"
               aria-current="{{ current_route == 'admin_dashboard' ? 'page' : 'false' }}">
                <i class="fas fa-tachometer-alt text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Dashboard</span>
            </a>
            
            {# Users #}
            <a href="{{ path('admin_users') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full {{ current_route starts with 'admin_users' ? 'text-blue-400' : 'text-gray-400' }} hover:text-blue-400 transition-colors"
               aria-current="{{ current_route starts with 'admin_users' ? 'page' : 'false' }}">
                <i class="fas fa-users text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Gebruikers</span>
            </a>
            
            {# Admins #}
            <a href="{{ path('admin_administrators') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full {{ current_route starts with 'admin_administrators' ? 'text-blue-400' : 'text-gray-400' }} hover:text-blue-400 transition-colors"
               aria-current="{{ current_route starts with 'admin_administrators' ? 'page' : 'false' }}">
                <i class="fas fa-user-shield text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Admins</span>
            </a>
            
            {# Settings #}
            <a href="{{ path('admin_change_password') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full text-gray-400 hover:text-blue-400 transition-colors"
               aria-label="Wachtwoord wijzigen">
                <i class="fas fa-key text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Wachtwoord</span>
            </a>
            
            {# Logout #}
            <a href="{{ path('admin_logout') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full text-gray-400 hover:text-red-400 transition-colors"
               aria-label="Uitloggen">
                <i class="fas fa-sign-out-alt text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Uitloggen</span>
            </a>
        </div>
    </nav>
    {% endif %}

    {# Main Content Area - Mobile-First Layout with Bottom Nav Spacing #}
    <main id="admin-main-content" class="{% if app.user and is_granted('ROLE_ADMIN') %}py-6 sm:py-8 lg:py-10 pb-20 md:pb-8{% endif %}" role="main">
        <div class="{% if app.user and is_granted('ROLE_ADMIN') %}max-w-7xl mx-auto px-4 sm:px-6 lg:px-8{% endif %}">
            {# Success Flash Messages - Enhanced Mobile Design #}
            {% for message in app.flashes('success') %}
                <div class="flash-message mb-4 bg-green-50 border-l-4 border-green-500 text-green-800 p-4 rounded-r-md shadow-sm" role="alert">
                    <div class="flex items-start">
                        <i class="fas fa-check-circle text-green-500 mt-0.5 mr-3" aria-hidden="true"></i>
                        <span class="flex-1">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
            
            {# Error Flash Messages - Enhanced Mobile Design #}
            {% for message in app.flashes('error') %}
                <div class="flash-message mb-4 bg-red-50 border-l-4 border-red-500 text-red-800 p-4 rounded-r-md shadow-sm" role="alert">
                    <div class="flex items-start">
                        <i class="fas fa-exclamation-circle text-red-500 mt-0.5 mr-3" aria-hidden="true"></i>
                        <span class="flex-1">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
            
            {# Warning Flash Messages #}
            {% for message in app.flashes('warning') %}
                <div class="flash-message mb-4 bg-yellow-50 border-l-4 border-yellow-500 text-yellow-800 p-4 rounded-r-md shadow-sm" role="alert">
                    <div class="flex items-start">
                        <i class="fas fa-exclamation-triangle text-yellow-500 mt-0.5 mr-3" aria-hidden="true"></i>
                        <span class="flex-1">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
            
            {# Info Flash Messages #}
            {% for message in app.flashes('info') %}
                <div class="flash-message mb-4 bg-blue-50 border-l-4 border-blue-500 text-blue-800 p-4 rounded-r-md shadow-sm" role="alert">
                    <div class="flex items-start">
                        <i class="fas fa-info-circle text-blue-500 mt-0.5 mr-3" aria-hidden="true"></i>
                        <span class="flex-1">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </main>

    {% block javascripts %}{% endblock %}
</body>
</html>
