<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}HomeArchive{% endblock %}</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-50">
    {% if app.user %}
    <nav class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="{{ path('app_dashboard') }}" class="text-lg sm:text-xl font-bold text-blue-600">
                            <i class="fas fa-archive"></i> <span class="hidden xs:inline">HomeArchive</span>
                        </a>
                    </div>
                    <div class="hidden md:ml-6 md:flex md:space-x-4">
                        <a href="{{ path('app_dashboard') }}" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-home mr-1"></i> Dashboard
                        </a>
                        <a href="{{ path('subscription_index') }}" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-file-invoice-dollar mr-1"></i> Abonnementen
                        </a>
                        <a href="{{ path('password_vault_index') }}" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-lock mr-1"></i> Kluis
                        </a>
                        <a href="{{ path('category_index') }}" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-tags mr-1"></i> Categorieën
                        </a>
                    </div>
                </div>
                <div class="flex items-center">
                    <span class="hidden sm:block text-gray-700 text-sm mr-3">{{ app.user.name }}</span>
                    <a href="{{ path('app_logout') }}" class="hidden sm:flex text-gray-500 hover:text-gray-700 items-center">
                        <i class="fas fa-sign-out-alt mr-1"></i> <span class="text-sm">Uitloggen</span>
                    </a>
                    <!-- Mobile menu button -->
                    <button type="button" class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:bg-gray-100 focus:outline-none" onclick="toggleMobileMenu()">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile menu -->
        <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="{{ path('app_dashboard') }}" class="block text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-md text-base font-medium">
                    <i class="fas fa-home mr-2"></i> Dashboard
                </a>
                <a href="{{ path('subscription_index') }}" class="block text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-md text-base font-medium">
                    <i class="fas fa-file-invoice-dollar mr-2"></i> Abonnementen
                </a>
                <a href="{{ path('password_vault_index') }}" class="block text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-md text-base font-medium">
                    <i class="fas fa-lock mr-2"></i> Wachtwoordkluis
                </a>
                <a href="{{ path('category_index') }}" class="block text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-md text-base font-medium">
                    <i class="fas fa-tags mr-2"></i> Categorieën
                </a>
                <div class="border-t border-gray-200 pt-2 mt-2">
                    <div class="px-3 py-2 text-sm text-gray-500">
                        Ingelogd als: <span class="font-semibold text-gray-700">{{ app.user.name }}</span>
                    </div>
                    <a href="{{ path('app_logout') }}" class="block text-red-600 hover:bg-red-50 px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-sign-out-alt mr-2"></i> Uitloggen
                    </a>
                </div>
            </div>
        </div>
    </nav>
    
    <script>
    function toggleMobileMenu() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
    }
    </script>
    {% endif %}

    <main class="{% if app.user %}py-10{% endif %}">
        <div class="{% if app.user %}max-w-7xl mx-auto sm:px-6 lg:px-8{% endif %}">
            {% for message in app.flashes('success') %}
                <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </main>

    {% block javascripts %}{% endblock %}
</body>
</html>
