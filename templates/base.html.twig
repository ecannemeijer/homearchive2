<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    <meta name="description" content="HomeArchive - Beheer uw abonnementen, verzekeringen en wachtwoorden">
    <title>{% block title %}HomeArchive{% endblock %}</title>
    
    <!-- Suppress Tailwind CDN Warning -->
    <script>
        // Suppress Tailwind CDN production warning
        const originalWarn = console.warn;
        console.warn = function(...args) {
            if (typeof args[0] === 'string' && args[0].includes('cdn.tailwindcss.com')) {
                return;
            }
            originalWarn.apply(console, args);
        };
        
        // Suppress Stimulus debug logs
        const originalLog = console.log;
        console.log = function(...args) {
            if (typeof args[0] === 'string' && (
                args[0].includes('application #') || 
                args[0].includes('AssetMapper')
            )) {
                return;
            }
            originalLog.apply(console, args);
        };
    </script>
    
    <!-- Tailwind CSS CDN (Development) -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
          crossorigin="anonymous" referrerpolicy="no-referrer">
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    
    {% block stylesheets %}{% endblock %}
    
    <!-- AssetMapper Import Map - Keep persistent across Turbo navigation -->
    <div id="importmap-scripts" data-turbo-permanent>
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    </div>
</head>
<body class="bg-gray-50 no-scroll-x">
    {# Skip to main content for accessibility #}
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    {% if app.user %}
    {# Main Navigation - Mobile-First Design #}
    <nav class="bg-white shadow-sm sticky top-0 z-50" role="navigation" aria-label="Main navigation">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                {# Logo and Brand #}
                <div class="flex items-center">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="{{ path('app_dashboard') }}" 
                           class="text-lg sm:text-xl font-bold text-blue-600 hover:text-blue-700 transition-colors flex items-center gap-2"
                           aria-label="HomeArchive Dashboard">
                            <i class="fas fa-archive" aria-hidden="true"></i> 
                            <span class="hidden sm:inline">HomeArchive</span>
                            <span class="sm:hidden">HA</span>
                        </a>
                    </div>
                    
                    {# Desktop Navigation Links #}
                    <div class="hidden md:ml-8 md:flex md:space-x-1">
                        {% set current_route = app.request.attributes.get('_route') %}
                        
                        <a href="{{ path('app_dashboard') }}" 
                           class="nav-item {{ current_route starts with 'app_dashboard' ? 'active' : '' }} text-gray-700 hover:bg-gray-100 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-all"
                           aria-current="{{ current_route starts with 'app_dashboard' ? 'page' : 'false' }}">
                            <i class="fas fa-home mr-1" aria-hidden="true"></i> Dashboard
                        </a>
                        
                        <a href="{{ path('subscription_index') }}" 
                           class="nav-item {{ current_route starts with 'subscription_' ? 'active' : '' }} text-gray-700 hover:bg-gray-100 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-all"
                           aria-current="{{ current_route starts with 'subscription_' ? 'page' : 'false' }}">
                            <i class="fas fa-file-invoice-dollar mr-1" aria-hidden="true"></i> Abonnementen
                        </a>
                        
                        <a href="{{ path('password_vault_index') }}" 
                           class="nav-item {{ current_route starts with 'password_vault_' ? 'active' : '' }} text-gray-700 hover:bg-gray-100 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-all"
                           aria-current="{{ current_route starts with 'password_vault_' ? 'page' : 'false' }}">
                            <i class="fas fa-lock mr-1" aria-hidden="true"></i> Kluis
                        </a>
                        
                        <a href="{{ path('category_index') }}" 
                           class="nav-item {{ current_route starts with 'category_' ? 'active' : '' }} text-gray-700 hover:bg-gray-100 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-all"
                           aria-current="{{ current_route starts with 'category_' ? 'page' : 'false' }}">
                            <i class="fas fa-tags mr-1" aria-hidden="true"></i> Categorieën
                        </a>
                    </div>
                </div>
                
                {# User Menu - Desktop Only #}
                <div class="flex items-center gap-3">
                    {# User Name - Hidden on small screens #}
                    <span class="hidden sm:block text-gray-700 text-sm font-medium">
                        {{ app.user.name }}
                    </span>
                    
                    {# Settings - All screens #}
                    <a href="{{ path('app_change_password') }}" 
                       class="flex text-gray-600 hover:text-gray-900 items-center gap-2 px-3 py-2 rounded-md hover:bg-gray-100 transition-all"
                       aria-label="Instellingen">
                        <i class="fas fa-cog" aria-hidden="true"></i> 
                        <span class="hidden md:block text-sm">Instellingen</span>
                    </a>
                    
                    {# Logout - Desktop Only #}
                    <a href="{{ path('app_logout') }}" 
                       class="hidden md:flex text-gray-600 hover:text-gray-900 items-center gap-2 px-3 py-2 rounded-md hover:bg-gray-100 transition-all"
                       aria-label="Uitloggen">
                        <i class="fas fa-sign-out-alt" aria-hidden="true"></i> 
                        <span class="text-sm">Uitloggen</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>
    
    {# Mobile Bottom Navigation Bar - Modern Thumb-Friendly Design #}
    <nav class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-50" role="navigation" aria-label="Mobile navigation">
        <div class="flex justify-around items-center h-16">
            {% set current_route = app.request.attributes.get('_route') %}
            
            {# Dashboard #}
            <a href="{{ path('app_dashboard') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full {{ current_route starts with 'app_dashboard' ? 'text-blue-600' : 'text-gray-600' }} hover:text-blue-600 transition-colors"
               aria-current="{{ current_route starts with 'app_dashboard' ? 'page' : 'false' }}">
                <i class="fas fa-home text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Dashboard</span>
            </a>
            
            {# Subscriptions #}
            <a href="{{ path('subscription_index') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full {{ current_route starts with 'subscription_' ? 'text-blue-600' : 'text-gray-600' }} hover:text-blue-600 transition-colors"
               aria-current="{{ current_route starts with 'subscription_' ? 'page' : 'false' }}">
                <i class="fas fa-file-invoice-dollar text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Abonnementen</span>
            </a>
            
            {# Password Vault #}
            <a href="{{ path('password_vault_index') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full {{ current_route starts with 'password_vault_' ? 'text-blue-600' : 'text-gray-600' }} hover:text-blue-600 transition-colors"
               aria-current="{{ current_route starts with 'password_vault_' ? 'page' : 'false' }}">
                <i class="fas fa-lock text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Kluis</span>
            </a>
            
            {# Categories #}
            <a href="{{ path('category_index') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full {{ current_route starts with 'category_' ? 'text-blue-600' : 'text-gray-600' }} hover:text-blue-600 transition-colors"
               aria-current="{{ current_route starts with 'category_' ? 'page' : 'false' }}">
                <i class="fas fa-tags text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Categorieën</span>
            </a>
            
            {# Logout #}
            <a href="{{ path('app_logout') }}" 
               class="flex flex-col items-center justify-center flex-1 h-full text-gray-600 hover:text-red-600 transition-colors"
               aria-label="Uitloggen">
                <i class="fas fa-sign-out-alt text-xl mb-1" aria-hidden="true"></i>
                <span class="text-xs font-medium">Uitloggen</span>
            </a>
        </div>
    </nav>
    {% endif %}

    {# Main Content Area - Mobile-First Layout with Bottom Nav Spacing #}
    <main id="main-content" class="{% if app.user %}py-6 sm:py-8 lg:py-10 pb-20 md:pb-8{% endif %}" role="main">
        <div class="{% if app.user %}max-w-7xl mx-auto px-4 sm:px-6 lg:px-8{% endif %}">
            {# Success Flash Messages - Enhanced Mobile Design #}
            {% for message in app.flashes('success') %}
                <div class="flash-message mb-4 bg-green-50 border-l-4 border-green-500 text-green-800 p-4 rounded-r-md shadow-sm" role="alert">
                    <div class="flex items-start">
                        <i class="fas fa-check-circle text-green-500 mt-0.5 mr-3" aria-hidden="true"></i>
                        <span class="flex-1">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
            
            {# Error Flash Messages - Enhanced Mobile Design #}
            {% for message in app.flashes('error') %}
                <div class="flash-message mb-4 bg-red-50 border-l-4 border-red-500 text-red-800 p-4 rounded-r-md shadow-sm" role="alert">
                    <div class="flex items-start">
                        <i class="fas fa-exclamation-circle text-red-500 mt-0.5 mr-3" aria-hidden="true"></i>
                        <span class="flex-1">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
            
            {# Warning Flash Messages #}
            {% for message in app.flashes('warning') %}
                <div class="flash-message mb-4 bg-yellow-50 border-l-4 border-yellow-500 text-yellow-800 p-4 rounded-r-md shadow-sm" role="alert">
                    <div class="flex items-start">
                        <i class="fas fa-exclamation-triangle text-yellow-500 mt-0.5 mr-3" aria-hidden="true"></i>
                        <span class="flex-1">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}
            
            {# Info Flash Messages #}
            {% for message in app.flashes('info') %}
                <div class="flash-message mb-4 bg-blue-50 border-l-4 border-blue-500 text-blue-800 p-4 rounded-r-md shadow-sm" role="alert">
                    <div class="flex items-start">
                        <i class="fas fa-info-circle text-blue-500 mt-0.5 mr-3" aria-hidden="true"></i>
                        <span class="flex-1">{{ message }}</span>
                    </div>
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </main>

    {% block javascripts %}{% endblock %}
</body>
</html>
