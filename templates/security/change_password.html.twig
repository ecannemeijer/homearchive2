{% extends 'base.html.twig' %}

{% block title %}Wachtwoord Wijzigen - HomeArchive{% endblock %}

{% block body %}
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8 max-w-2xl">
    <div class="mb-4 sm:mb-6">
        <a href="{{ path('app_dashboard') }}" 
           class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors py-2"
           aria-label="Terug naar dashboard">
            <i class="fas fa-arrow-left" aria-hidden="true"></i> 
            <span>Terug naar dashboard</span>
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-md p-5 sm:p-6 lg:p-8">
        <div class="mb-6">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">Wachtwoord Wijzigen</h1>
            <p class="text-gray-600">Wijzig uw wachtwoord voor extra beveiliging</p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg flex items-start gap-3" role="alert">
                <i class="fas fa-check-circle text-xl" aria-hidden="true"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg flex items-start gap-3" role="alert">
                <i class="fas fa-exclamation-circle text-xl" aria-hidden="true"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        <form method="post" class="space-y-6">
            <div>
                <label for="current_password" class="block text-sm font-semibold text-gray-700 mb-2">
                    <i class="fas fa-lock text-gray-500" aria-hidden="true"></i> Huidig Wachtwoord
                </label>
                <input type="password" 
                       id="current_password" 
                       name="current_password" 
                       required 
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                       placeholder="Voer uw huidige wachtwoord in"
                       aria-required="true">
            </div>

            <div class="border-t pt-6">
                <div class="mb-4">
                    <label for="new_password" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-key text-gray-500" aria-hidden="true"></i> Nieuw Wachtwoord
                    </label>
                    <input type="password" 
                           id="new_password" 
                           name="new_password" 
                           required 
                           minlength="8"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                           placeholder="Minimaal 8 tekens"
                           aria-required="true"
                           aria-describedby="password-help">
                    <p id="password-help" class="mt-2 text-sm text-gray-500">
                        <i class="fas fa-info-circle" aria-hidden="true"></i> Minimaal 8 tekens vereist
                    </p>
                </div>

                <div>
                    <label for="confirm_password" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-check-double text-gray-500" aria-hidden="true"></i> Bevestig Nieuw Wachtwoord
                    </label>
                    <input type="password" 
                           id="confirm_password" 
                           name="confirm_password" 
                           required 
                           minlength="8"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                           placeholder="Herhaal uw nieuwe wachtwoord"
                           aria-required="true">
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-4 border-t">
                <button type="submit" 
                        class="flex-1 sm:flex-none inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-save" aria-hidden="true"></i> 
                    <span>Wachtwoord Wijzigen</span>
                </button>
                <a href="{{ path('app_dashboard') }}" 
                   class="flex-1 sm:flex-none inline-flex items-center justify-center gap-2 bg-white hover:bg-gray-50 text-gray-700 px-6 py-3 rounded-lg font-semibold border border-gray-300 transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                    <i class="fas fa-times" aria-hidden="true"></i> 
                    <span>Annuleren</span>
                </a>
            </div>
        </form>

        <div class="mt-8 pt-6 border-t">
            <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
                <h3 class="font-semibold text-blue-900 mb-2 flex items-center gap-2">
                    <i class="fas fa-shield-alt" aria-hidden="true"></i>
                    <span>Beveiligingstips</span>
                </h3>
                <ul class="text-sm text-blue-800 space-y-1">
                    <li class="flex items-start gap-2">
                        <i class="fas fa-check text-blue-600 mt-0.5" aria-hidden="true"></i>
                        <span>Gebruik een uniek wachtwoord voor dit account</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="fas fa-check text-blue-600 mt-0.5" aria-hidden="true"></i>
                        <span>Combineer hoofdletters, kleine letters, cijfers en symbolen</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="fas fa-check text-blue-600 mt-0.5" aria-hidden="true"></i>
                        <span>Verander uw wachtwoord regelmatig</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
