{% extends 'admin_base.html.twig' %}

{% block title %}Administrators - Admin{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-white">
            <i class="fas fa-shield-alt"></i> Administrators
        </h1>
        <a href="{{ path('admin_administrator_create') }}" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg">
            <i class="fas fa-user-shield"></i> Nieuwe Administrator
        </a>
    </div>

    <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-700">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Gebruikersnaam</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Naam</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Aangemaakt</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                {% for admin in admins %}
                    <tr class="hover:bg-gray-700 transition">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">{{ admin.id }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <i class="fas fa-shield-alt text-purple-500 mr-2"></i>
                                <span class="text-sm font-medium text-white">{{ admin.username }}</span>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-300">{{ admin.name ?: 'N/A' }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                            {{ admin.createdAt ? admin.createdAt|date('d-m-Y H:i') : 'N/A' }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right">
                            <span class="px-2 py-1 text-xs rounded bg-green-900 text-green-300">
                                <i class="fas fa-check-circle"></i> Actief
                            </span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-8 text-center text-gray-400">
                            <i class="fas fa-inbox text-4xl mb-2"></i>
                            <p>Geen administrators gevonden</p>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6 bg-gray-800 rounded-lg p-6">
        <h3 class="text-white font-semibold mb-2">
            <i class="fas fa-info-circle"></i> Totaal aantal administrators: {{ admins|length }}
        </h3>
        <p class="text-gray-400 text-sm mt-2">
            <i class="fas fa-exclamation-triangle text-yellow-500"></i> 
            Let op: Wees voorzichtig met het beheren van administrator accounts. Zorg ervoor dat er altijd minimaal één actieve administrator is.
        </p>
    </div>
</div>
{% endblock %}
