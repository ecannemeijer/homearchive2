{% extends 'admin_base.html.twig' %}

{% block title %}Wachtwoord Wijzigen - {{ user.name }} - Admin - HomeArchive{% endblock %}

{% block body %}
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8 max-w-2xl">
    <div class="mb-4 sm:mb-6">
        <a href="{{ path('admin_users') }}" 
           class="inline-flex items-center gap-2 text-blue-400 hover:text-blue-300 font-medium transition-colors py-2"
           aria-label="Terug naar gebruikers">
            <i class="fas fa-arrow-left" aria-hidden="true"></i> 
            <span>Terug naar gebruikers</span>
        </a>
    </div>

    <div class="bg-gray-800 rounded-lg shadow-md p-5 sm:p-6 lg:p-8">
        <div class="mb-6">
            <h1 class="text-2xl sm:text-3xl font-bold text-white mb-2">
                <i class="fas fa-key text-blue-400"></i> Wachtwoord Wijzigen
            </h1>
            <p class="text-gray-300">Gebruiker: <strong>{{ user.name }}</strong> ({{ user.email }})</p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="mb-4 p-4 bg-green-900 border border-green-700 text-green-200 rounded-lg flex items-start gap-3" role="alert">
                <i class="fas fa-check-circle text-xl" aria-hidden="true"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-4 p-4 bg-red-900 border border-red-700 text-red-200 rounded-lg flex items-start gap-3" role="alert">
                <i class="fas fa-exclamation-circle text-xl" aria-hidden="true"></i>
                <span>{{ message }}</span>
            </div>
        {% endfor %}

        <form method="post" class="space-y-6">
            <div class="bg-yellow-900 border-l-4 border-yellow-500 p-4 mb-6">
                <div class="flex items-start gap-3">
                    <i class="fas fa-exclamation-triangle text-yellow-400 text-xl mt-1" aria-hidden="true"></i>
                    <div>
                        <h3 class="font-semibold text-yellow-200 mb-1">Let op!</h3>
                        <p class="text-yellow-100 text-sm">
                            U staat op het punt het wachtwoord van deze gebruiker te wijzigen. 
                            De gebruiker zal moeten inloggen met het nieuwe wachtwoord.
                        </p>
                    </div>
                </div>
            </div>

            <div>
                <label for="new_password" class="block text-sm font-semibold text-gray-300 mb-2">
                    <i class="fas fa-key text-gray-400" aria-hidden="true"></i> Nieuw Wachtwoord
                </label>
                <input type="password" 
                       id="new_password" 
                       name="new_password" 
                       required 
                       minlength="8"
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                       placeholder="Minimaal 8 tekens"
                       aria-required="true"
                       aria-describedby="password-help">
                <p id="password-help" class="mt-2 text-sm text-gray-400">
                    <i class="fas fa-info-circle" aria-hidden="true"></i> Minimaal 8 tekens vereist
                </p>
            </div>

            <div>
                <label for="confirm_password" class="block text-sm font-semibold text-gray-300 mb-2">
                    <i class="fas fa-check-double text-gray-400" aria-hidden="true"></i> Bevestig Nieuw Wachtwoord
                </label>
                <input type="password" 
                       id="confirm_password" 
                       name="confirm_password" 
                       required 
                       minlength="8"
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 text-white rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                       placeholder="Herhaal het nieuwe wachtwoord"
                       aria-required="true">
            </div>

            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-4 border-t border-gray-700">
                <button type="submit" 
                        class="flex-1 sm:flex-none inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-save" aria-hidden="true"></i> 
                    <span>Wachtwoord Wijzigen</span>
                </button>
                <a href="{{ path('admin_users') }}" 
                   class="flex-1 sm:flex-none inline-flex items-center justify-center gap-2 bg-gray-700 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-semibold border border-gray-600 transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                    <i class="fas fa-times" aria-hidden="true"></i> 
                    <span>Annuleren</span>
                </a>
            </div>
        </form>

        <div class="mt-8 pt-6 border-t border-gray-700">
            <div class="bg-blue-900 rounded-lg p-4 border border-blue-700">
                <h3 class="font-semibold text-blue-200 mb-2 flex items-center gap-2">
                    <i class="fas fa-info-circle" aria-hidden="true"></i>
                    <span>Informatie</span>
                </h3>
                <ul class="text-sm text-blue-100 space-y-1">
                    <li class="flex items-start gap-2">
                        <i class="fas fa-check text-blue-400 mt-0.5" aria-hidden="true"></i>
                        <span>Het wachtwoord moet minimaal 8 tekens lang zijn</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="fas fa-check text-blue-400 mt-0.5" aria-hidden="true"></i>
                        <span>De gebruiker wordt automatisch uitgelogd na wijziging</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="fas fa-check text-blue-400 mt-0.5" aria-hidden="true"></i>
                        <span>Deze actie wordt niet gelogd voor privacy redenen</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
