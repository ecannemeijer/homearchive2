{% extends 'admin_base.html.twig' %}

{% block title %}Wachtwoord Wijzigen - Admin{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="mb-6">
        <a href="{{ path('admin_dashboard') }}" class="text-gray-300 hover:text-white">
            <i class="fas fa-arrow-left"></i> Terug naar dashboard
        </a>
    </div>

    <div class="bg-gray-800 rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-white mb-6">
            <i class="fas fa-key text-yellow-500"></i> Wachtwoord Wijzigen
        </h1>

        <div class="bg-blue-900 border border-blue-700 text-blue-200 px-4 py-3 rounded mb-6">
            <i class="fas fa-info-circle"></i> 
            U bent ingelogd als: <strong>{{ app.user.username }}</strong>
        </div>

        <form method="post" action="{{ path('admin_change_password') }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('change_password') }}">

            <div class="mb-6">
                <label class="block text-gray-300 font-semibold mb-2">Huidig Wachtwoord *</label>
                <input type="password" name="current_password" required 
                       class="w-full bg-gray-700 border border-gray-600 text-white rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500"
                       placeholder="Voer uw huidige wachtwoord in">
            </div>

            <div class="mb-6">
                <label class="block text-gray-300 font-semibold mb-2">Nieuw Wachtwoord *</label>
                <input type="password" name="new_password" required 
                       class="w-full bg-gray-700 border border-gray-600 text-white rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500"
                       placeholder="Minimaal 8 tekens">
                <p class="text-sm text-gray-400 mt-1">Minimaal 8 tekens</p>
            </div>

            <div class="mb-6">
                <label class="block text-gray-300 font-semibold mb-2">Bevestig Nieuw Wachtwoord *</label>
                <input type="password" name="confirm_password" required 
                       class="w-full bg-gray-700 border border-gray-600 text-white rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500"
                       placeholder="Herhaal het nieuwe wachtwoord">
            </div>

            <div class="bg-yellow-900 border border-yellow-700 text-yellow-200 px-4 py-3 rounded mb-6">
                <i class="fas fa-exclamation-triangle"></i> 
                <strong>Let op:</strong> Na het wijzigen van uw wachtwoord blijft u ingelogd op dit apparaat.
            </div>

            <div class="flex gap-4">
                <button type="submit" 
                        class="flex-1 bg-yellow-600 hover:bg-yellow-700 text-white px-6 py-3 rounded-lg font-semibold">
                    <i class="fas fa-save"></i> Wachtwoord Wijzigen
                </button>
                <a href="{{ path('admin_dashboard') }}" 
                   class="flex-1 bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-semibold text-center">
                    Annuleren
                </a>
            </div>
        </form>
    </div>

    <div class="mt-6 bg-gray-800 rounded-lg p-6">
        <h3 class="text-white font-semibold mb-3">
            <i class="fas fa-shield-alt text-green-500"></i> Tips voor een sterk wachtwoord:
        </h3>
        <ul class="text-gray-300 space-y-2 text-sm">
            <li><i class="fas fa-check text-green-500"></i> Gebruik minimaal 8 tekens</li>
            <li><i class="fas fa-check text-green-500"></i> Combineer hoofdletters en kleine letters</li>
            <li><i class="fas fa-check text-green-500"></i> Gebruik cijfers en speciale tekens</li>
            <li><i class="fas fa-check text-green-500"></i> Gebruik geen persoonlijke informatie</li>
            <li><i class="fas fa-check text-green-500"></i> Gebruik een uniek wachtwoord voor dit account</li>
        </ul>
    </div>
</div>
{% endblock %}
