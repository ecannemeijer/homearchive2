{% extends 'base.html.twig' %}

{% block title %}Categorieën - HomeArchive{% endblock %}

{% block body %}
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6 sm:mb-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center gap-2 sm:gap-3">
            <i class="fas fa-tags text-blue-600" aria-hidden="true"></i> 
            <span>Mijn Categorieën</span>
        </h1>
        <a href="{{ path('category_create') }}" 
           class="inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 sm:px-5 py-3 sm:py-3.5 rounded-lg font-medium text-sm sm:text-base shadow-sm hover:shadow-md transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <i class="fas fa-plus" aria-hidden="true"></i> 
            <span>Nieuwe Categorie</span>
        </a>
    </div>

    {% if categories|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-5">
            {% for category in categories %}
                <div class="bg-white rounded-lg shadow-md p-5 sm:p-6 hover:shadow-lg transition-shadow border-l-4" style="border-left-color: {{ category.color }};">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex items-center flex-1 min-w-0">
                            <div class="w-8 h-8 rounded-full flex-shrink-0 mr-3" style="background-color: {{ category.color }};"></div>
                            <h3 class="text-lg sm:text-xl font-semibold text-gray-900 truncate">{{ category.name }}</h3>
                        </div>
                    </div>
                    
                    <div class="text-sm text-gray-600 mb-4 flex items-center gap-2">
                        <i class="fas fa-calendar text-gray-400" aria-hidden="true"></i>
                        <span>{{ category.createdAt|date('d-m-Y') }}</span>
                    </div>
                    
                    <div class="flex gap-2">
                        <a href="{{ path('category_edit', {id: category.id}) }}" 
                           class="flex-1 inline-flex items-center justify-center gap-1 bg-blue-600 hover:bg-blue-700 text-white px-3 py-2.5 rounded-md text-sm font-medium transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <i class="fas fa-edit" aria-hidden="true"></i> 
                            <span>Bewerken</span>
                        </a>
                        <form method="post" action="{{ path('category_delete', {id: category.id}) }}" 
                              onsubmit="return confirm('Weet u zeker dat u deze categorie wilt verwijderen?');"
                              class="flex-1">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button type="submit" 
                                    class="w-full inline-flex items-center justify-center gap-1 bg-red-600 hover:bg-red-700 text-white px-3 py-2.5 rounded-md text-sm font-medium transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                <i class="fas fa-trash" aria-hidden="true"></i> 
                                <span>Verwijderen</span>
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="bg-white rounded-lg shadow-md p-8 sm:p-12 text-center">
            <i class="fas fa-inbox text-gray-300 text-5xl sm:text-6xl mb-4" aria-hidden="true"></i>
            <h3 class="text-lg sm:text-xl font-semibold text-gray-700 mb-2">Geen categorieën gevonden</h3>
            <p class="text-gray-500 mb-6">Voeg uw eerste categorie toe om te beginnen</p>
            <a href="{{ path('category_create') }}" 
               class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-all shadow-sm hover:shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <i class="fas fa-plus" aria-hidden="true"></i>
                <span>Nieuwe categorie toevoegen</span>
            </a>
        </div>
    {% endif %}

    <div class="mt-6 sm:mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <p class="text-sm text-gray-700 flex items-start gap-2">
            <i class="fas fa-info-circle text-blue-600 mt-0.5" aria-hidden="true"></i> 
            <span><strong>Tip:</strong> Gebruik categorieën om uw abonnementen en verzekeringen te organiseren. Bijvoorbeeld: Streaming, Verzekeringen, Software, etc.</span>
        </p>
    </div>
</div>
{% endblock %}
