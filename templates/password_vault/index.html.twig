{% extends 'base.html.twig' %}

{% block title %}Wachtwoordkluis - HomeArchive{% endblock %}

{% block body %}
<div class="px-4">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">
                <i class="fas fa-lock text-purple-600"></i> Wachtwoordkluis
            </h1>
            <p class="mt-2 text-gray-600">Veilig versleuteld met AES-256-CBC</p>
        </div>
        <div class="mt-4 sm:mt-0">
            <a href="{{ path('password_vault_create') }}" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700">
                <i class="fas fa-plus mr-2"></i> Nieuw wachtwoord
            </a>
        </div>
    </div>

    <!-- Search -->
    <div class="mb-6">
        <form method="get" class="flex gap-2">
            <input type="text" name="search" value="{{ search }}" placeholder="Zoeken..." class="flex-1 rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500">
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700">
                <i class="fas fa-search"></i>
            </button>
            {% if search %}
            <a href="{{ path('password_vault_index') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                <i class="fas fa-times"></i>
            </a>
            {% endif %}
        </form>
    </div>

    <!-- Passwords List -->
    {% if passwords|length > 0 %}
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
            {% for password in passwords %}
            <li>
                <a href="{{ path('password_vault_show', {id: password.id}) }}" class="block hover:bg-gray-50">
                    <div class="px-4 py-4 sm:px-6">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <i class="fas fa-key text-purple-600 mr-3"></i>
                                <div>
                                    <p class="text-sm font-medium text-purple-600 truncate">
                                        {{ password.title }}
                                    </p>
                                    {% if password.username %}
                                    <p class="text-sm text-gray-500">
                                        <i class="fas fa-user text-xs"></i> {{ password.username }}
                                    </p>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="ml-2 flex-shrink-0 flex">
                                {% if password.tags %}
                                <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                                    {{ password.tags }}
                                </p>
                                {% endif %}
                            </div>
                        </div>
                        {% if password.websiteUrl %}
                        <div class="mt-2 sm:flex sm:justify-between">
                            <div class="sm:flex">
                                <p class="flex items-center text-sm text-gray-500">
                                    <i class="fas fa-globe text-xs mr-1"></i>
                                    {{ password.websiteUrl|length > 50 ? password.websiteUrl|slice(0, 50) ~ '...' : password.websiteUrl }}
                                </p>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
    {% else %}
    <div class="bg-white shadow rounded-lg p-12 text-center">
        <i class="fas fa-lock text-6xl text-gray-300 mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Geen wachtwoorden gevonden</h3>
        <p class="text-gray-500 mb-6">Begin met het toevoegen van uw eerste wachtwoord.</p>
        <a href="{{ path('password_vault_create') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700">
            <i class="fas fa-plus mr-2"></i> Nieuw wachtwoord toevoegen
        </a>
    </div>
    {% endif %}
</div>
{% endblock %}
