{% extends 'base.html.twig' %}

{% block title %}{{ subscription.name }} - HomeArchive{% endblock %}

{% block body %}
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8 max-w-4xl">
    <div class="mb-4 sm:mb-6">
        <a href="{{ path('subscription_index') }}" 
           class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors py-2"
           aria-label="Terug naar overzicht">
            <i class="fas fa-arrow-left" aria-hidden="true"></i> 
            <span>Terug naar overzicht</span>
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-md p-5 sm:p-6 lg:p-8">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4 mb-6">
            <div class="flex-1">
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-3">{{ subscription.name }}</h1>
                <span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full {{ subscription.type == 'subscription' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' }}">
                    {{ subscription.type == 'subscription' ? 'Abonnement' : 'Verzekering' }}
                </span>
            </div>
            <div class="flex items-center gap-2">
                <a href="{{ path('subscription_edit', {id: subscription.id}) }}" 
                   class="inline-flex items-center gap-1 bg-blue-600 hover:bg-blue-700 text-white px-3 py-1.5 rounded-md text-xs sm:text-sm font-medium transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-edit" aria-hidden="true"></i> 
                    <span>Bewerken</span>
                </a>
                <form method="post" action="{{ path('subscription_delete', {id: subscription.id}) }}" 
                      onsubmit="return confirm('Weet u zeker dat u dit abonnement wilt verwijderen?');" class="inline">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete' ~ subscription.id) }}">
                    <button type="submit" 
                            class="inline-flex items-center gap-1 bg-red-600 hover:bg-red-700 text-white px-3 py-1.5 rounded-md text-xs sm:text-sm font-medium transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                        <i class="fas fa-trash" aria-hidden="true"></i> 
                        <span>Verwijderen</span>
                    </button>
                </form>
            </div>
        </div>

        <!-- Cost -->
        <div class="bg-blue-50 border-l-4 border-blue-600 p-6 mb-6">
            <p class="text-4xl font-bold text-blue-900 mb-2">€{{ subscription.cost|number_format(2, ',', '.') }}</p>
            <p class="text-gray-700">per {{ subscription.frequency == 'monthly' ? 'maand' : 'jaar' }}</p>
            <p class="text-sm text-gray-600 mt-2">
                Maandelijkse kosten: €{{ subscription.monthlyCost|number_format(2, ',', '.') }}
            </p>
        </div>

        <!-- Details Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            {% if subscription.category %}
                <div>
                    <h3 class="text-sm font-semibold text-gray-500 mb-1">Categorie</h3>
                    <p class="text-gray-900"><i class="fas fa-tag text-blue-600"></i> {{ subscription.category }}</p>
                </div>
            {% endif %}

            {% if subscription.billingDate %}
                <div>
                    <h3 class="text-sm font-semibold text-gray-500 mb-1">Factuurdatum</h3>
                    <p class="text-gray-900"><i class="fas fa-calendar-day text-blue-600"></i> {{ subscription.billingDate }}e van de maand</p>
                </div>
            {% endif %}

            {% if subscription.startDate %}
                <div>
                    <h3 class="text-sm font-semibold text-gray-500 mb-1">Startdatum</h3>
                    <p class="text-gray-900"><i class="fas fa-calendar-plus text-blue-600"></i> {{ subscription.startDate|date('d-m-Y') }}</p>
                </div>
            {% endif %}

            {% if subscription.endDate %}
                <div>
                    <h3 class="text-sm font-semibold text-gray-500 mb-1">Einddatum</h3>
                    <p class="text-gray-900"><i class="fas fa-calendar-times text-red-600"></i> {{ subscription.endDate|date('d-m-Y') }}</p>
                </div>
            {% endif %}

            <div>
                <h3 class="text-sm font-semibold text-gray-500 mb-1">Opzegbaar</h3>
                <p class="text-gray-900">
                    {% if subscription.isMonthlyCancelable %}
                        <i class="fas fa-check-circle text-green-600"></i> Maandelijks opzegbaar
                    {% else %}
                        <i class="fas fa-times-circle text-red-600"></i> Niet maandelijks opzegbaar
                    {% endif %}
                </p>
            </div>

            <div>
                <h3 class="text-sm font-semibold text-gray-500 mb-1">Status</h3>
                <p class="text-gray-900">
                    {% if subscription.isActive %}
                        <i class="fas fa-check-circle text-green-600"></i> Actief
                    {% else %}
                        <i class="fas fa-pause-circle text-gray-600"></i> Inactief
                    {% endif %}
                </p>
            </div>
        </div>

        <!-- Login Info -->
        {% if subscription.websiteUrl or subscription.username or decrypted_password %}
            <div class="border-t pt-6 mb-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-4">Login Gegevens</h3>
                
                {% if subscription.websiteUrl %}
                    <div class="mb-4">
                        <h4 class="text-sm font-semibold text-gray-500 mb-1">Website</h4>
                        <a href="{{ subscription.websiteUrl }}" target="_blank" class="text-blue-600 hover:text-blue-700">
                            <i class="fas fa-external-link-alt"></i> {{ subscription.websiteUrl }}
                        </a>
                    </div>
                {% endif %}

                {% if subscription.username %}
                    <div class="mb-4">
                        <h4 class="text-sm font-semibold text-gray-500 mb-1">Gebruikersnaam</h4>
                        <p class="text-gray-900">{{ subscription.username }}</p>
                    </div>
                {% endif %}

                {% if decrypted_password %}
                    <div class="mb-4">
                        <h4 class="text-sm font-semibold text-gray-500 mb-1">Wachtwoord</h4>
                        <div class="flex items-center gap-2">
                            <code class="bg-gray-100 px-3 py-2 rounded font-mono">{{ decrypted_password }}</code>
                            <button onclick="navigator.clipboard.writeText('{{ decrypted_password }}')" 
                                    class="text-blue-600 hover:text-blue-700">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endif %}

        <!-- Notes -->
        {% if subscription.notes %}
            <div class="border-t pt-6 mb-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-4"><i class="fas fa-sticky-note text-gray-600"></i> Notities</h3>
                <p class="text-gray-700 whitespace-pre-wrap">{{ subscription.notes }}</p>
            </div>
        {% endif %}

        <!-- Documents Section -->
        <div class="border-t pt-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
                <i class="fas fa-file-alt text-blue-600"></i> Documenten & Bestanden
            </h3>
            
            <!-- Upload Form -->
            <div class="bg-gray-50 rounded-lg p-4 mb-4">
                <form method="post" action="{{ path('subscription_upload_document', {id: subscription.id}) }}" enctype="multipart/form-data" class="flex flex-col sm:flex-row gap-3">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('upload' ~ subscription.id) }}">
                    
                    <div class="flex-1">
                        <label for="document" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-upload"></i> Bestand uploaden (PDF, JPG, PNG - max 5MB)
                        </label>
                        <input type="file" 
                               id="document" 
                               name="document" 
                               accept=".pdf,.jpg,.jpeg,.png,.gif,.webp"
                               required
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    
                    <div class="flex items-end">
                        <button type="submit" 
                                class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <span>Uploaden</span>
                        </button>
                    </div>
                </form>
            </div>

            <!-- Documents List -->
            {% if subscription.documents|length > 0 %}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for document in subscription.documents %}
                        <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                            <div class="flex items-start justify-between mb-2">
                                <div class="flex-1 min-w-0">
                                    {% if document.fileType starts with 'image/' %}
                                        <i class="fas fa-image text-green-600 text-2xl"></i>
                                    {% else %}
                                        <i class="fas fa-file-pdf text-red-600 text-2xl"></i>
                                    {% endif %}
                                </div>
                                <form method="post" action="{{ path('subscription_delete_document', {id: document.id}) }}" 
                                      onsubmit="return confirm('Weet u zeker dat u dit document wilt verwijderen?');" class="inline">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete_doc' ~ document.id) }}">
                                    <button type="submit" 
                                            class="text-red-600 hover:text-red-700 transition-colors"
                                            title="Verwijderen">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                            
                            <h4 class="text-sm font-medium text-gray-900 mb-1 truncate" title="{{ document.originalFilename }}">
                                {{ document.originalFilename }}
                            </h4>
                            
                            <p class="text-xs text-gray-500 mb-3">
                                {{ (document.fileSize / 1024)|number_format(0) }} KB • 
                                {{ document.uploadedAt|date('d-m-Y H:i') }}
                            </p>
                            
                            {% if document.fileType starts with 'image/' %}
                                <a href="{{ asset(document.filePath) }}" 
                                   target="_blank" 
                                   class="block mb-2">
                                    <img src="{{ asset(document.filePath) }}" 
                                         alt="{{ document.originalFilename }}" 
                                         class="w-full h-32 object-cover rounded border border-gray-200">
                                </a>
                            {% endif %}
                            
                            <a href="{{ asset(document.filePath) }}" 
                               target="_blank" 
                               download="{{ document.originalFilename }}"
                               class="inline-flex items-center gap-1 text-blue-600 hover:text-blue-700 text-sm font-medium">
                                <i class="fas fa-download"></i>
                                <span>Bekijken/Downloaden</span>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-8 text-gray-500">
                    <i class="fas fa-folder-open text-4xl mb-2"></i>
                    <p>Nog geen documenten geüpload</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
