{% extends 'base.html.twig' %}

{% block title %}Nieuw Abonnement - HomeArchive{% endblock %}

{% block body %}
{# Subscription Create Form - Mobile-First Layout #}
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8 max-w-4xl">
    {# Back Navigation - Touch Optimized #}
    <div class="mb-4 sm:mb-6">
        <a href="{{ path('subscription_index') }}" 
           class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors py-2"
           aria-label="Terug naar overzicht">
            <i class="fas fa-arrow-left" aria-hidden="true"></i> 
            <span>Terug naar overzicht</span>
        </a>
    </div>

    {# Form Card #}
    <div class="bg-white rounded-lg shadow-md p-5 sm:p-6 lg:p-8">
        {# Form Header #}
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 sm:mb-8 flex items-center gap-3">
            <i class="fas fa-plus-circle text-blue-600" aria-hidden="true"></i> 
            <span>Nieuw Abonnement</span>
        </h1>

        <form method="post" action="{{ path('subscription_create') }}" class="space-y-6">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('subscription') }}">

            {# Basic Info Section #}
            <div class="space-y-5">
                <h2 class="text-lg font-semibold text-gray-900 pb-2 border-b border-gray-200">Basisinformatie</h2>
                
                {# Name Field #}
                <div>
                    <label for="name" class="block text-gray-700 font-semibold mb-2">
                        Naam <span class="text-red-500">*</span>
                    </label>
                    <input type="text" 
                           id="name"
                           name="name" 
                           required 
                           class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                           placeholder="Bijv. Netflix, Zorgverzekering">
                </div>

                {# Type and Category Row #}
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-5">
                    <div>
                        <label for="type" class="block text-gray-700 font-semibold mb-2">
                            Type <span class="text-red-500">*</span>
                        </label>
                        <select id="type" 
                                name="type" 
                                required 
                                class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                            <option value="subscription">Abonnement</option>
                            <option value="insurance">Verzekering</option>
                        </select>
                    </div>

                    <div>
                        <label for="category" class="block text-gray-700 font-semibold mb-2">Categorie</label>
                        <select id="category" 
                                name="category" 
                                class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                            <option value="">Selecteer een categorie</option>
                            {% for cat in categories %}
                                <option value="{{ cat.name }}">{{ cat.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                {# Cost and Frequency Row #}
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-5">
                    <div>
                        <label for="cost" class="block text-gray-700 font-semibold mb-2">
                            Kosten (€) <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500">€</span>
                            <input type="number" 
                                   id="cost"
                                   name="cost" 
                                   step="0.01" 
                                   required 
                                   class="w-full border border-gray-300 rounded-md pl-8 pr-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                                   placeholder="0.00">
                        </div>
                    </div>

                    <div>
                        <label for="frequency" class="block text-gray-700 font-semibold mb-2">
                            Frequentie <span class="text-red-500">*</span>
                        </label>
                        <select id="frequency" 
                                name="frequency" 
                                class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                            <option value="monthly">Maandelijks</option>
                            <option value="yearly">Jaarlijks</option>
                        </select>
                    </div>
                </div>

                {# Date Range Row #}
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-5">
                    <div>
                        <label for="start_date" class="block text-gray-700 font-semibold mb-2">Startdatum</label>
                        <input type="date" 
                               id="start_date"
                               name="start_date" 
                               class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                    </div>

                    <div>
                        <label for="end_date" class="block text-gray-700 font-semibold mb-2">Einddatum</label>
                        <input type="date" 
                               id="end_date"
                               name="end_date" 
                               class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                    </div>
                </div>

                {# Billing Date #}
                <div>
                    <label for="billing_date" class="block text-gray-700 font-semibold mb-2">
                        Factuurdatum (dag van de maand)
                    </label>
                    <input type="number" 
                           id="billing_date"
                           name="billing_date" 
                           min="1" 
                           max="31" 
                           class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                           placeholder="Bijv. 15 voor de 15e van de maand">
                    <p class="text-sm text-gray-500 mt-1">Geef de dag van de maand op waarop u factuur krijgt</p>
                </div>

                {# Checkboxes - Mobile Optimized Touch Targets #}
                <div class="space-y-3">
                    <label class="flex items-center gap-3 p-3 rounded-md hover:bg-gray-50 transition-colors cursor-pointer">
                        <input type="checkbox" 
                               id="is_monthly_cancelable"
                               name="is_monthly_cancelable" 
                               value="1" 
                               class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                        <span class="text-gray-700 font-medium">Maandelijks opzegbaar</span>
                    </label>

                    <label class="flex items-center gap-3 p-3 rounded-md hover:bg-gray-50 transition-colors cursor-pointer">
                        <input type="checkbox" 
                               id="is_active"
                               name="is_active" 
                               value="1" 
                               checked 
                               class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                        <span class="text-gray-700 font-medium">Actief (wordt meegeteld in maandelijkse kosten)</span>
                    </label>
                </div>
            </div>

            {# Login Info Section (Optional) #}
            <div class="border-t border-gray-200 pt-6 space-y-5">
                <h2 class="text-lg font-semibold text-gray-900 pb-2 border-b border-gray-200 flex items-center gap-2">
                    <i class="fas fa-key text-gray-400" aria-hidden="true"></i>
                    <span>Login Gegevens</span>
                    <span class="text-sm font-normal text-gray-500">(optioneel)</span>
                </h2>
                
                <div>
                    <label for="website_url" class="block text-gray-700 font-semibold mb-2">Website URL</label>
                    <input type="url" 
                           id="website_url"
                           name="website_url" 
                           class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                           placeholder="https://...">
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-5">
                    <div>
                        <label for="username" class="block text-gray-700 font-semibold mb-2">Gebruikersnaam</label>
                        <input type="text" 
                               id="username"
                               name="username" 
                               value="" 
                               autocomplete="off"
                               class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="Optioneel">
                    </div>

                    <div>
                        <label for="password" class="block text-gray-700 font-semibold mb-2">Wachtwoord</label>
                        <input type="password" 
                               id="password"
                               name="password" 
                               value="" 
                               autocomplete="new-password"
                               class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="Optioneel">
                        <p class="text-xs text-gray-500 mt-1">
                            <i class="fas fa-lock text-green-500" aria-hidden="true"></i> 
                            Wordt versleuteld opgeslagen
                        </p>
                    </div>
                </div>
            </div>

            {# Additional Info Section #}
            <div class="border-t border-gray-200 pt-6 space-y-5">
                <h2 class="text-lg font-semibold text-gray-900 pb-2 border-b border-gray-200">Extra informatie</h2>
                
                {# Notes #}
                <div>
                    <label for="notes" class="block text-gray-700 font-semibold mb-2">Notities</label>
                    <textarea id="notes"
                              name="notes" 
                              rows="4" 
                              class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-y"
                              placeholder="Extra informatie, opmerkingen of herinneringen..."></textarea>
                </div>

                {# Renewal Reminder #}
                <div>
                    <label for="renewal_reminder" class="block text-gray-700 font-semibold mb-2">
                        Herinnering voor verlenging (dagen)
                    </label>
                    <input type="number" 
                           id="renewal_reminder"
                           name="renewal_reminder" 
                           value="7" 
                           min="1" 
                           class="w-full border border-gray-300 rounded-md px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                    <p class="text-sm text-gray-500 mt-1">U krijgt een herinnering zoveel dagen voor de einddatum</p>
                </div>
            </div>

            {# Form Actions - Improved Button Hierarchy #}
            <div class="flex flex-col-reverse sm:flex-row gap-3 sm:gap-4 pt-6 border-t border-gray-200">
                {# Secondary Action - Cancel #}
                <a href="{{ path('subscription_index') }}" 
                   class="flex-1 sm:flex-none inline-flex items-center justify-center gap-2 bg-white border-2 border-gray-300 hover:bg-gray-50 hover:border-gray-400 text-gray-700 px-6 py-3 rounded-lg font-semibold transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                    <i class="fas fa-times" aria-hidden="true"></i>
                    <span>Annuleren</span>
                </a>
                
                {# Primary Action - Submit #}
                <button type="submit" 
                        class="flex-1 inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold shadow-sm hover:shadow-md transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-save" aria-hidden="true"></i>
                    <span>Abonnement opslaan</span>
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
